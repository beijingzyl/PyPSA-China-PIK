            #     config['version']) + '/plots/heatmap/water_tank/water_store-{opts}-{topology}-{pathway}-2030.png',
            #     ** config["scenario"]
            # ),
            expand(
                config['results_dir'] + 'version-' + str(
                config['version']) + '/plots/summary/positive/postnetwork-{opts}-{topology}-{pathway}-2030_costs.png',
                **config["scenario"]
            ),
            # expand(
            #     config['results_dir'] + 'version-' + str(
