            expand(
                config['results_dir'] + 'version-' + str(config['version']) + '/postnetworks/positive/postnetwork-{opts}-{topology}-{pathway}-2030.nc',
                **config["scenario"]
            ),

    rule plot_all:
        input:
            # expand(
