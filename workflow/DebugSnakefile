from os.path import normpath, abspath
from shutil import move
from pathlib import Path
from snakemake.utils import min_version

min_version("8.11")

configfile: f"config/default_config.yaml"

ATLITE_NPROCESSES = config['atlite'].get('nprocesses', 4)

storage http:
    provider="http",

if config["foresight"] == "non-pathway":
    rule prepare_all_networks:
        input:
            expand(
                config['results_dir'] + 'version-' + str(config['version']) + '/prenetworks/prenetwork-{opts}-{topology}-{pathway}-2030.nc',
                **config["scenario"]
            )

    rule solve_all_networks:
        input:
            expand(
                config['results_dir'] + 'version-' + str(config['version']) + '/postnetworks/postnetwork-{opts}-{topology}-{pathway}-2030.nc',
                **config["scenario"]
            ),

    rule plot_all:
        input:
            expand(
                config['results_dir'] + 'version-' + str(config['version']) + '/plots/postnetwork-{opts}-{topology}-{pathway}-2030_ext.pdf',
                **config["scenario"]
            ),
            expand(
                config['results_dir'] + 'version-' + str(config['version']) + '/plots/postnetwork-{opts}-{topology}-{pathway}-2030_costs.png',
                **config["scenario"]
            ),

if config["foresight"] == "myopic":

    rule prepare_all_networks:
        input:
            expand(
                config['results_dir'] + 'version-' + str(config['version']) + '/prenetworks/positive/prenetwork-{opts}-{topology}-{pathway}-2030.nc',
